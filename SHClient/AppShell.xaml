<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SHClient.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SHClient"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Home" Icon="home.png">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" />
        </Tab>
        <Tab Title="Schedule" Icon="schedule.png">
            <ShellContent ContentTemplate="{DataTemplate local:SchedulePage}" />
        </Tab>
        <Tab Title="Logs" Icon="logs.png">
            <ShellContent ContentTemplate="{DataTemplate local:LogsPage}" />
        </Tab>
    </TabBar>

</Shell>
